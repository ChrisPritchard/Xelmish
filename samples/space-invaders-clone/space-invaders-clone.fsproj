<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ApplicationManifest>app.manifest</ApplicationManifest>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="content\*">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Include="readme.md" />
        <Compile Include="Common.fs" />
        <Compile Include="StartScreen.fs" />
        <Compile Include="GameOver.fs" />
        <Compile Include="Player.fs" />
        <Compile Include="Invaders.fs" />
        <Compile Include="Game.fs" />
        <Compile Include="Program.fs" />
    </ItemGroup>

    <ItemGroup>
        <MonoGameContentReference Include="**\*.mgcb" />
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Remove="bin\**" />
        <MonoGameContentReference Remove="bin\**" />
    </ItemGroup>
    <ItemGroup />

    <ItemGroup>
        <ProjectReference Include="..\..\src\Xelmish.fsproj" />
        <PackageReference Include="Elmish" Version="5.0.2" />
        <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.4" />
        <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.4">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <Target Name="RestoreDotnetTools" BeforeTargets="CollectPackageReferences">
        <Message
            Text="Restoring dotnet tools (this might take a while depending on your internet speed and should only happen upon building your project for the first time, or after upgrading MonoGame, or clearing your nuget cache)"
            Importance="High" />
        <Exec Command="dotnet tool restore" />
    </Target>

</Project>